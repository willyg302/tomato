- var favicon = 'data:image/x-icon;base64,'

doctype html
html
	head
		title= 'tomato'
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='author', content='William Gaul')
		link(rel='icon', type='image/x-icon', href=favicon)
		link(rel='stylesheet', type='text/css', href='https://cdn.plyr.io/1.1.10/plyr.css')
		link(rel='stylesheet', type='text/css', href='main.css')
	body.loading
		.loading-message= 'Loading...'
		input#menu-trigger(type='checkbox')
		label(for='menu-trigger')

		.bg
			.blurred
			.moving

		#particles

		img#logo(src='img/tomato-logo.svg')
		#visualizer

		#trackInfo
			img#infoImage(src='')
			div
				h4#infoArtist
				h3#infoTrack

		.menu
			input#submit.form-control(placeholder='SoundCloud URL here')
			.player
				audio#player(controls='' autoplay='' crossorigin preload autobuffer)

		script(type='text/javascript').
			// Load plyr SVG icons
			(function(d, u){
				var a = new XMLHttpRequest(),
					b = d.body;
				if ('withCredentials' in a) {
					a.open('GET', u, true);
					a.send();
					a.onload = function() {
						var c = d.createElement('div');
						c.style.display = 'none';
						c.innerHTML = a.responseText;
						b.insertBefore(c, b.childNodes[0]);
					};
				}
			})(document, 'https://cdn.plyr.io/1.1.10/sprite.svg');


		script(type='text/javascript', src='http://connect.soundcloud.com/sdk.js')
		script(type='text/javascript', src='https://cdn.plyr.io/1.1.10/plyr.js')
		script(type='text/javascript', src='https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js')
		script(type='text/javascript', src='main.js')
